<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >
        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/check_unselect"
            android:padding="5dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_15">
            <ImageView
                android:id="@+id/iv_goods_icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/icon_image_error"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="商品名称"
                android:textColor="@color/color_333333"
                android:textSize="14dp"
                android:layout_toRightOf="@id/iv_goods_icon"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_goods_spec"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"
                android:layout_toRightOf="@id/iv_goods_icon"
                android:layout_below="@id/tv_goods_name"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_3"
                android:text="规格"
                />
            <LinearLayout
                android:layout_toRightOf="@id/iv_goods_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_goods_icon">
                <TextView
                    android:id="@+id/tv_price_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="¥"
                    android:textColor="@color/color_FF3730"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="19.9"
                    android:textColor="@color/color_FF3730"
                    android:textSize="14dp" />
            </LinearLayout>
            <com.wanris.module.widget.NumberSelector
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nsl_number_select"
                android:layout_alignBottom="@id/iv_goods_icon"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dp_10"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/v_section_footer"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ed"
        android:visibility="gone"
        tools:visibility="visible"/>
</LinearLayout>